{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table table-striped" style="text-align: left">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>NumEtud</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }} </td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.numEtud }}</td>
                <td>
                    <a class="btn text-primary" href="{{ path('app_student_show', {'id': student.id}) }}"> <i class="fa fa-list-alt"></i></a>
                    <a class="btn text-primary" href="{{ path('app_student_edit', {'id': student.id}) }}"> <i class="fa fa-pencil-square-o"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_student_new') }}">Create new</a>

{% endblock %}
